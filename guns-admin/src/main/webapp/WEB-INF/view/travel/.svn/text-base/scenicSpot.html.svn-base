@layout("/common/_container.html"){

<div class="row">
    <div class="col-sm-12">
        <div class="ibox float-e-margins">
            <div class="ibox-title">
                <h5>景点管理</h5>
            </div>
            <div class="ibox-content">
                <div class="row row-lg">
                    <div class="col-sm-12">
                        <div class="row">
                            <div class="col-sm-3">
                                <#NameCon id="condition" name="名称" />
                            </div>
                            <div class="col-sm-3">
                                <#button name="搜索" icon="fa-search" clickFun="ScenicSpot.search()"/>
                            </div>
                        </div>
                        <div class="hidden-xs" id="ScenicSpotTableToolbar" role="group">
                            @if(shiro.hasPermission("/scenicSpot/add")){
                            <#button name="添加" icon="fa-plus" clickFun="ScenicSpot.openAddScenicSpot()"/>
                            @}
                            @if(shiro.hasPermission("/scenicSpot/update")){
                            <#button name="修改" icon="fa-edit" clickFun="ScenicSpot.openScenicSpotDetail()" space="true"/>
                            @}
                            @if(shiro.hasPermission("/scenicSpot/delete")){
                            <#button name="删除" icon="fa-remove" clickFun="ScenicSpot.delete()" space="true"/>
                            @}
                        </div>
                        <#table id="ScenicSpotTable"/>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="${ctxPath}/static/modular/travel/scenicSpot.js"></script>
@}


