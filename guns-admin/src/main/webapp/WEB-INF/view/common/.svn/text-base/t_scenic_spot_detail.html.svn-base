
<!--景点List Begin-->
<div class="scenic-spot-detail">
    <div class="container">
        <!--路径导航(面包屑)-->
        <div class="row">
            <ul class="breadcrumb">
                <li><a href="">首页</a></li>
                <li><a href="">景点</a></li>
                <li><a href="">景点详情</a></li>
            </ul>
        </div>

        <div class="row">
            <div class="col-sm-5">
                <div id="myCarousel" class="carousel slide">
                    <ol class="carousel-indicators">
                        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
                        <li data-target="#myCarousel" data-slide-to="1"></li>
                        <li data-target="#myCarousel" data-slide-to="2"></li>
                        <li data-target="#myCarousel" data-slide-to="3"></li>
                        <li data-target="#myCarousel" data-slide-to="4"></li>
                    </ol>
                    <div class="carousel-inner">
                        @if(isNotEmpty(scenicSpot)){
                            @if(isNotEmpty(scenicSpot.img1)){
                                <div class="item active">
                                    <img src="${ctxPath}/static/img/${scenicSpot.img1}" alt="第一张" class="img-responsive center-block">
                                    <div class="carousel-caption">
                                        <h3>蓝色与灰色</h3>
                                        <p>山与远处的天空</p>
                                    </div>
                                </div>
                            @}

                            @if(isNotEmpty(scenicSpot.img2)){
                                <div class="item">
                                    <img src="${ctxPath}/static/img/${scenicSpot.img2}" alt="第二张" class="img-responsive center-block">
                                    <div class="carousel-caption">
                                        <h3>俄罗斯火车雪景</h3>
                                        <p>俄罗斯火车雪景</p>
                                    </div>
                                </div>
                            @}

                            @if(isNotEmpty(scenicSpot.img3)){
                                <div class="item">
                                    <img src="${ctxPath}/static/img/${scenicSpot.img3}" alt="第三张" class="img-responsive center-block">
                                    <div class="carousel-caption">
                                        <h3>山与油菜花海</h3>
                                        <p>山与油菜花海</p>
                                    </div>
                                </div>
                            @}

                            @if(isNotEmpty(scenicSpot.img4)){
                                <div class="item">
                                    <img src="${ctxPath}/static/img/${scenicSpot.img4}" alt="第四张" class="img-responsive center-block">
                                    <div class="carousel-caption">
                                        <h3>带你去远方</h3>
                                        <p>诗和远方</p>
                                    </div>
                                </div>
                            @}

                            @if(isNotEmpty(scenicSpot.img5)){
                                <div class="item">
                                    <img src="${ctxPath}/static/img/${scenicSpot.img5}" alt="第五张" class="img-responsive center-block">
                                    <div class="carousel-caption">
                                        <h3>带你去远方</h3>
                                        <p>诗和远方</p>
                                    </div>
                                </div>
                            @}
                        @}
                    </div>
                    <a href="#myCarousel" data-slide="prev" class="carousel-control left">
                        <span class="glyphicon glyphicon-chevron-left"></span>
                    </a>
                    <a href="#myCarousel" data-slide="next" class="carousel-control right">
                        <span class="glyphicon glyphicon-chevron-right"></span>
                    </a>
                </div>
            </div>
            <div class="col-sm-7">
                <!--景点名称-->
                <h2>${scenicSpot.name}</h2>

                <div class="row">
                    <div class="col-xs-6">
                        <h4>类型: <span class="label label-success">${scenicSpot.productTypeName}</span> </h4>
                    </div>
                    <div class="col-xs-6">
                        <h4>所属区域: <span class="label label-success">${scenicSpot.regionName}</span></h4>
                    </div>
                </div>

                <div class="row">
                    <div class="col-xs-6">
                        <h4>星级: <span class="label label-success">${scenicSpot.grade}</span> </h4>
                    </div>
                </div>

                <div class="row">
                    <div class="col-xs-4 form-group">
                        <label>成人:</label>
                        <select class="form-control">
                            <option>0</option>
                            <option>1</option>
                            <option selected>2</option>
                            <option>3</option>
                            <option>4</option>
                            <option>5</option>
                            <option>6</option>
                            <option>>6</option>
                        </select>

                    </div>
                    <div class="col-xs-4">
                        <label>儿童:</label>
                        <select class="form-control">
                            <option>0</option>
                            <option selected>1</option>
                            <option>2</option>
                            <option>3</option>
                            <option>4</option>
                            <option>5</option>
                            <option>>6</option>
                        </select>
                    </div>

                    <div class="col-xs-4">
                        <label>军人/特殊人群:</label>
                        <select class="form-control">
                            <option selected>0</option>
                            <option>1</option>
                            <option>2</option>
                            <option>3</option>
                            <option>4</option>
                            <option>5</option>
                            <option>>6</option>
                        </select>
                    </div>
                </div>
                <div class="row">
                    <div class="form-group text-center">
                        <div class="col-xs-6">
                            <a href="javascript:;" class="btn btn-primary btn-lg">立即购买</a>
                        </div>
                        <div class="col-xs-6">
                            <a href="javascript:;" class="btn btn-success btn-lg">加入购物车</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!--End-->
        <!--地图位置 Begin-->
        <div class="row map_div">
            <div class="panel panel-info">
                <div class="panel-heading">
                    <div class="panel-title">所在位置</div>
                </div>
                <div class="panel-body">
                    <div class="embed-responsive embed-responsive-16by9">
                        <div class="embed-responsive-item">
                            <div id="scenic_spot_map"></div>
                        </div>
                    </div>

                </div>
            </div>

        </div>
        <!--地图位置 End-->
        <!--景点介绍 Begin-->
        <div class="row">
            <div class="panel panel-primary">
                <div class="panel-heading">
                    <div class="panel-title">景点介绍</div>
                </div>
                <div class="panel-body ">
                    <div class="embed-responsive embed-responsive-16by9">
                        <div class="embed-responsive-item">
                            <h1 style="text-align: center;"><font style="background-color: rgb(238, 236, 224);"><font
                                    color="#4d80bf">${scenicSpot.introduce}</font><font color="#46acc8">&#8203;</font></font></h1>
                        </div>
                    </div>


                </div>
            </div>
        </div>
        <!--景点介绍 End-->

        <!--服务承诺 Begin-->
        <div class="row">
            <div class="panel panel-danger">
                <div class="panel-heading">
                    <div class="panel-title">
                        服务承诺
                    </div>
                </div>
                <div class="panel-body">

                    <div class="embed-responsive embed-responsive-16by9">
                        <div class="embed-responsive-item">
                            ${scenicSpot.commitment}
                        </div>
                    </div>
                </div>
            </div>
        </div>


        <!--服务承诺 Begin-->
    </div>
</div>
